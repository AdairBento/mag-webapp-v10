# normalize line endings
* text=auto

# always LF for code/yaml
*.yml   text eol=lf
*.yaml  text eol=lf
*.sh    text eol=lf
*.ts    text eol=lf
*.tsx   text eol=lf
*.js    text eol=lf
*.mjs   text eol=lf
*.cjs   text eol=lf
*.json  text eol=lf
*.md    text eol=lf
*.sql   text eol=lf

# powershell normalmente em CRLF no Windows
*.ps1   text eol=crlf
# sempre LF p/ c√≥digo e YAML/JSON
.husky/* text eol=lf

